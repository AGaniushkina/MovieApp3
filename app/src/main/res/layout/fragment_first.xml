<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:layout_width="62dp"
        android:layout_height="20dp"
        android:text="FilmKu"
        android:textColor="#110E47"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="Now Showing"
            android:textColor="#110E47"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/button_see_more" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:layout_marginTop="53dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>
    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="454dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="Popular"
            android:textColor="#110E47"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/button_see_more" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/MyLinearLayout">
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="47dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#00FFFFFF">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@mipmap/venom"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:text="Venom Let There Be Carnage"
                    android:layout_width="130dp"
                    android:layout_height="36dp"
                    android:textSize="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="125dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:text="6.4/10 IMDb"
                    android:textSize="16dp"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:id="@+id/item_rating"
                    android:layout_marginLeft="141dp"
                    android:layout_marginTop="50dp"/>

                <ImageView
                    android:id="@+id/item_rating_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top|left"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="52dp"
                    app:srcCompat="@drawable/star"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:text="1h 47m"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="141dp"
                    android:layout_marginTop="92dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top|left"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="94dp"
                    app:srcCompat="@drawable/clock"
                    tools:ignore="VectorDrawableCompat" />
                <ImageView
                    android:id="@+id/spiderman_category_11"
                    android:layout_width="62dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="70dp"
                    android:foreground="@drawable/category_horror_"
                    />

                <ImageView
                    android:id="@+id/spiderman_category_21"
                    android:layout_width="62dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="194dp"
                    android:layout_marginTop="70dp"
                    android:foreground="@drawable/category_mystery"
                    />
                <ImageView
                    android:id="@+id/spiderman_category_31"
                    android:layout_width="62dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="264dp"
                    android:layout_marginTop="70dp"
                    android:foreground="@drawable/category"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#00FFFFFF">

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    app:srcCompat="@mipmap/kingsman"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="10dp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:text="The King's Man"
                    android:textSize="16dp"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="125dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginRight="16dp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:text="8.4/10 IMDb"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="141dp"
                    android:layout_marginTop="50dp"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top|left"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="52dp"
                    app:srcCompat="@drawable/star"
                    tools:ignore="DuplicateIds,VectorDrawableCompat" />

                <TextView
                    android:text="1h 17m"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="141dp"
                    android:layout_marginTop="92dp"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top|left"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="94dp"
                    app:srcCompat="@drawable/clock"
                    tools:ignore="DuplicateIds,VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/spiderman_category_1"
                    android:layout_width="62dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="70dp"
                    android:foreground="@drawable/category_action"
                    />

                <ImageView
                    android:id="@+id/spiderman_category_2"
                    android:layout_width="62dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="194dp"
                    android:layout_marginTop="70dp"
                    android:foreground="@drawable/category_fantasy"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>